{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
       "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Bundler",
    "types": ["vite/client"],

    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
